</view> -->
<view class="" style="background-color: #f1f1f1;">
    <view class="cu-item solids-top solids-bottom arrow" bindtap="jmp_art" data-index="{{item.id}}"
        style="height:auto;margin:auto;margin-left:10rpx;padding-top:10rpx;padding-bottom:10rpx;margin-right:10rpx;background-color:white;display: flex;flex-direction: row;"
        wx:for="{{sections}}">
        <view class="myTxtCenter radius-xx"
            style="margin:auto;margin-left:10rpx;margin-right:10rpx;padding:20rpx;background-color:antiquewhite;font-size: larger;width:10%;font-weight: 600;">
            {{index+1}}
        </view>
        <view class="radius-x"
            style="display: flex;font-size: larger;flex:3;justify-content: center;background-color: rgba(128, 128, 128, 0.219);margin:20rpx;padding-left:20rpx;padding-right: 20rpx;padding-top:10rpx;padding-bottom:10rpx;flex-direction: column;">
            <view style="font-weight: 600;">
                {{item.post_index}}
            </view>
            <view class="" hover-class="none" hover-stop-propagation="false">
                {{item.post_title}}
            </view>

        </view>

    </view>
    <view class="" style="height:200rpx">

    </view>
</view>