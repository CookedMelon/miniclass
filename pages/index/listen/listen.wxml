<view class="" style="background-color: #f1f1f1;">
    <view class="cu-item solids-top solids-bottom arrow" bindtap="jmp_book" data-index="{{index}}"
        style="height:150rpx;margin:auto;margin-left:10rpx;margin-right:10rpx;background-color:white;display: flex;flex-direction: row;"
        wx:for="{{booklist}}">
        <image class="" src="{{item.img}}" mode="aspectFit"
            style="height:90%;margin:auto;flex:1;margin-left: 30rpx;margin-right: 50rpx;">

        </image>
        <view class="padding" style="padding-left:0;flex:5;display: flex;flex-direction: column;">
            <view style="font-size: larger;display: flex;align-items: center;flex:1">
                {{item.name}}
            </view>
            <view style="font-size: medium;display: flex;align-items: center;flex:1;color: grey;">
                {{item.author}}
            </view>
        </view>

    </view>
</view>